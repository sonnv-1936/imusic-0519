<% provide :title, t(".dashboard") %>

<div id="wrapper">
  <%= render "sidebar" %>

  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <div class="container-fluid">
        <h3 class="my-4"><%= t ".dashboard" %></h3>

        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to "#", class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-primary text-uppercase
                        mb-1"><%= t ".albums" %></div>
                    <% end %>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">351</div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-music fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to "#", class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-success text-uppercase
                        mb-1"><%= t ".artists" %></div>
                    <% end %>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">43</div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-microphone fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to admin_categories_path, class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-info text-uppercase
                        mb-1"><%= t ".categories" %></div>
                    <% end %>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                      <%= @category_size %></div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-folder-open fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to "#", class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-warning
                        text-uppercase mb-1"><%= t ".lyrics" %></div>
                    <% end %>
                    <div class="row no-gutters align-items-center">
                      <div class="col-auto"><div class="h5 mb-0 mr-3
                        font-weight-bold text-gray-800">464</div></div>
                      <div class="col">
                        <div class="progress progress-sm mr-2">
                          <div class="progress-bar bg-warning" role="progressbar"
                            style="width: 73%" aria-valuenow="73%" aria-valuemin="0"
                            aria-valuemax="100"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-file-text fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to "#", class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-danger text-uppercase
                        mb-1"><%= t ".tracks" %></div>
                    <% end %>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">1049</div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-forward fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card border-left-dark shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <%= link_to "#", class: "stretched-link card-link" do %>
                      <div class="text-xs font-weight-bold text-dark text-uppercase
                        mb-1"><%= t ".users" %></div>
                    <% end %>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">101</div>
                  </div>
                  <div class="col-auto">
                    <i class="fa fa-users fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<a class="scroll-to-top rounded" href="#page-top" style="display: inline;">
  <%= fa_icon "angle-up" %>
</a>
